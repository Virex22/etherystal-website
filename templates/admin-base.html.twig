<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                <span class="fs-2">Admin</span>
            </a>

            <ul class="nav nav-pills">
                <li class="nav-item"><a href="{{path("home")}}" class="nav-link" aria-current="page">Home</a></li>
                <li class="nav-item"><a href="{{path("etherystal_index")}}" class="nav-link">Etherystal</a></li>
                <li class="nav-item"><a href="{{path("material_index")}}" class="nav-link">Material</a></li>
                <li class="nav-item"><a href="{{path("color_index")}}" class="nav-link">Color</a></li>
                <li class="nav-item"><a href="{{path("rarety_index")}}" class="nav-link">Rarety</a></li>
            </ul>
        </header>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
